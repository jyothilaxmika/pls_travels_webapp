<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="auth_prefs.xml"/>
        <exclude domain="sharedpref" path="user_prefs.xml"/>
        <exclude domain="database" path="pls_travels_driver.db"/>
        
        <!-- Exclude all photos and user data -->
        <exclude domain="file" path="Photos/"/>
        <exclude domain="file" path="temp/"/>
        <exclude domain="external-file" path="."/>
        
        <!-- Include only app configuration -->
        <include domain="sharedpref" path="app_settings.xml"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Include user data for device transfer -->
        <include domain="sharedpref" path="app_settings.xml"/>
        <!-- Exclude sensitive authentication data -->
        <exclude domain="sharedpref" path="auth_prefs.xml"/>
        <exclude domain="database" path="pls_travels_driver.db"/>
    </device-transfer>
</data-extraction-rules>