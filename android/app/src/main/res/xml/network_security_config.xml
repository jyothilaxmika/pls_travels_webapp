<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production Configuration -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">plstravelswebapp.replit.app</domain>
        <!-- Certificate pinning disabled for Replit infrastructure -->
        <!-- Will be enabled when migrating to controlled domain -->
        <!-- <pin-set expiration="2026-12-31">
            <pin digest="SHA-256">[ACTUAL_CERTIFICATE_HASH]</pin>
            <pin digest="SHA-256">[BACKUP_CERTIFICATE_HASH]</pin>
        </pin-set> -->
        <trust-anchors>
            <!-- Trust only system CAs, no user-added CAs -->
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Development Configuration (Debug builds only) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Development/Debug Configuration -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">192.168.1.0/24</domain>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Firebase/Google Services -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">firebase.googleapis.com</domain>
        <domain includeSubdomains="true">firebaseremoteconfig.googleapis.com</domain>
        <domain includeSubdomains="true">crashlytics.googleapis.com</domain>
        <domain includeSubdomains="true">maps.googleapis.com</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Default Configuration - Most Restrictive -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Only trust system certificates -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <!-- Debug overrides (only active in debug builds) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>